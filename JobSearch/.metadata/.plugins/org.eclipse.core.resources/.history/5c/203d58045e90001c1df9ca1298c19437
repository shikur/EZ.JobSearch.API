@RequestMapping("/api/v1")
@RestController
public class ClientCVController {
	
	@Autowired
    private ClientCVRepository clientCVRepository;

    @Autowired
    private ClientServices _clientServices;

    @GetMapping("/getcv")
    public List<ClientCV> getAllCVS() {
        return clientCVRepository.findAll();
    }
    
    public ClientCVController(ClientServices clientServices) {
    	
    	this._clientServices = clientServices;
    	
    }
    
    @PostMapping
    public ClientCV create(@RequestBody ClientCV clientcv) {
        return this._clientServices.insertClientCVData(clientcv);
    }
    
    
